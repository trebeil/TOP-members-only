<h1>New Post</h1>

<% if @post.errors.any? %>
  <div>
    Please observe the following problems and try again:
  </div>
  <ul>
    <% @post.errors.full_messages.each do |msg| %>
      <li> <%= msg %> </li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @post, data: { turbo: "false" } do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>

  <%= form.submit 'Create' %>
<% end %>
